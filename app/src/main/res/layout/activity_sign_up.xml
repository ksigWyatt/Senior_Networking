<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sv_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightOrange"
    tools:context="com.sn.stepcounter.stepcounter.Sign_up">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">


      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">
          <android.support.v7.widget.Toolbar
              android:layout_width="match_parent"
              android:layout_height="50dp"
              app:title="Sign Up"
              android:id="@+id/toolbar_signup"
              android:background="@color/colorPrimary"></android.support.v7.widget.Toolbar>


          <android.support.design.widget.TextInputEditText
              android:id="@+id/email_sign_up"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:layout_below="@id/toolbar_signup"
              android:layout_margin="15dp"
              android:focusedByDefault="false"
              android:background="@color/colorPrimary"
              android:drawableLeft="@drawable/email_icon"
              android:elevation="5dp"
              android:hint="Email"
              android:inputType="textVisiblePassword"
              android:singleLine="true"/>


          <android.support.design.widget.TextInputEditText
              android:id="@+id/password1_sign_up"
              android:focusedByDefault="false"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:layout_below="@id/email_sign_up"
              android:layout_margin="15dp"
              android:background="@color/colorPrimary"
              android:drawableLeft="@drawable/password_icon"
              android:elevation="5dp"
              android:hint="Password"
              android:inputType="textPassword"
              app:passwordToggleEnabled="true"
              android:singleLine="true"/>

          <android.support.design.widget.TextInputEditText
              android:id="@+id/password2_sign_up"
              android:focusedByDefault="false"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:layout_below="@id/password1_sign_up"
              android:layout_margin="15dp"
              android:background="@color/colorPrimary"
              android:drawableLeft="@drawable/password_icon"
              android:elevation="5dp"
              android:hint="Confirm Password"
              android:inputType="textPassword"
              app:passwordToggleEnabled="true"
              android:singleLine="true"/>

          <com.dd.processbutton.iml.SubmitProcessButton
              android:id="@+id/sign_up_btn_2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_below="@id/password2_sign_up"
              android:layout_marginRight="15dp"
              android:text="Sign Up"
              android:textColor="@android:color/white"
              app:pb_colorComplete="@color/green_complete"
              app:pb_colorNormal="@color/colorAccent"
              app:pb_colorPressed="@color/colorAccent"
              app:pb_colorProgress="@color/black"
              app:pb_textProgress="Loading..."
              app:pb_textComplete="Success"
              app:pb_textError="Error"
              app:pb_colorError="@color/red_error"/>




      </RelativeLayout>
  </LinearLayout>


</ScrollView>
